<?xml version="1.0" encoding="UTF-8"?>
<imsx_POXEnvelopeResponse xmlns="http://www.imsglobal.org/services/ltiv1p1/xsd/imsoms_v1p0">
    <imsx_POXHeader>
        <imsx_POXResponseHeaderInfo>
            <imsx_version>V1.0</imsx_version>
            <imsx_messageIdentifier>{{ message.messageIdentifier }}</imsx_messageIdentifier>
            <imsx_statusInfo>
                <imsx_codeMajor>{{ message.info.status }}</imsx_codeMajor>
                <imsx_severity>status</imsx_severity>
                <imsx_messageRefIdentifier>{{ message.info.messageRefIdentifier }}</imsx_messageRefIdentifier>
                <imsx_operationRefIdentifier>{{ message.info.operationRefIdentifier }}</imsx_operationRefIdentifier>
                <imsx_description>{{ message.info.description }}</imsx_description>
            </imsx_statusInfo>
        </imsx_POXResponseHeaderInfo>
    </imsx_POXHeader>
    <imsx_POXBody>
    {% if message.body %}
        <readResultResponse>
            <result>
                <resultScore>
                    <language>{{ message.body.language }}</language>
                    <textString>{{ message.info.score }}</textString>
                </resultScore>
            </result>
        </readResultResponse>
    {% else %}
        <{{ message.operation }}Response/>
    {% endif %}
    </imsx_POXBody>
</imsx_POXEnvelopeResponse>
